mixin header(linksPages, path, whoPage)
  header
    nav.navbar.sticky-top.navbar-expand-md.navbar-dark.bg-dark
      .container
        a.navbar-brand(href=`${linksPages.main}index.html`)
          | Coffe
          span.text-info In
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mb-2.mb-lg-0

            li.nav-item
              if whoPage === "index"
                a.nav-link.active(aria-current='page' href=`${linksPages.main}index.html`) Головна
              else
                a.nav-link(aria-current='page' href=`${linksPages.main}index.html`) Головна

            li.n1av-item
              if whoPage === "delivery"
                a.nav-link.active(href=`${linksPages.delivery}delivery_item.html`) Доставка на св'ята
              else
                a.nav-link(href=`${linksPages.delivery}delivery_item.html`) Доставка на св'ята

            mixin item_active(active, whoPageItem)
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.dropdown-toggle(class=active href='#' role='button' data-toggle='dropdown' aria-expanded='false')
                  | Товари
                ul.dropdown-menu(aria-labelledby='navbarDropdown')
                  li
                    if whoPageItem === "type_coffee"
                      a.dropdown-item.active(href=`${path}type_coffee.html`) Кофе
                    else
                      a.dropdown-item(href=`${path}type_coffee.html`) Кофе
                  li
                    if whoPageItem === "type_tea"
                      a.dropdown-item.active(href=`${path}type_tea.html`) Чай
                    else
                      a.dropdown-item(href=`${path}type_tea.html`) Чай
                  li
                    if whoPageItem === "type_syrup"
                      a.dropdown-item.active(href=`${path}type_syrup.html`) Сироп
                    else
                      a.dropdown-item(href=`${path}type_syrup.html`) Сироп
                  li
                    if whoPageItem === "type_sweet"
                      a.dropdown-item.active(href=`${path}type_sweet.html`) Солодке
                    else
                      a.dropdown-item(href=`${path}type_sweet.html`) Солодке
                  li
                    if whoPageItem === "type_tools"
                      a.dropdown-item.active(href=`${path}type_tools.html`) Інструменти кофе-варіння
                    else
                      a.dropdown-item(href=`${path}type_tools.html`) Інструменти кофе-варіння
                  li
                    if whoPageItem === "type_carton_cup"
                      a.dropdown-item.active(href=`${path}type_carton_cup.html`) Стаканчики і додаткові товари
                    else
                      a.dropdown-item(href=`${path}type_carton_cup.html`) Стаканчики і додаткові товари

            if whoPage === "type_coffee" || whoPage === "type_tea" || whoPage === "type_syrup" || whoPage === "type_sweet" || whoPage === "type_tools" || whoPage === "type_carton_cup"
              +item_active("active", whoPage)
            else
              +item_active

            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-expanded='false')
                | Готові набори
              ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                  a.dropdown-item(href='#') Action
                li
                  a.dropdown-item(href='#') Another action
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href='#') Something else here
          form.d-flex
            input.form-control.mr-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search
